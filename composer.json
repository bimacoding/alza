{
  "name": "bimacoding/alza",
  "type": "project",
  "description": "A simple framework for PHP",
  "keywords": [
    "php",
    "framework",
    "alza",
    "simple",
    "basic"
  ],
  "homepage": "https://github.com/bimacoding/alza",
  "license": "MIT",
  "authors": [
    {
      "name": "Arif Iik Haerudin S.Kom",
      "email": "info@vitech.asia",
      "homepage": "https://vitech.asia",
      "role": "Creator"
    }
  ],
  "require": {
    "php": "^7.3|^8.0",
    "bimacoding/alza-core": "^3.0"
  },
  "require-dev": {
    "doctrine/dbal": "^2.6|^3.0",
    "filp/whoops": "^2.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "classmap": [
      "database/seeds"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php alza app:keygen --ansi"
    ]
  },
  "support": {
    "email": "info@vitech.asia"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "prefer-stable": true,
  "minimum-stability": "dev"
}
